<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:text="Title"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/contentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="contentText"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="author"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viewsIcon"
                style="@style/FreeBoardIcon"
                android:src="@drawable/baseline_remove_red_eye_black_18dp"/>
            <TextView
                android:id="@+id/views"
                style="@style/FreeBoardCnt"/>

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/likesIcon"
                style="@style/FreeBoardIcon"
                android:src="@android:color/darker_gray"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="@android:color/holo_red_dark"
                app:siShape="@raw/baseline_thumb_up_alt_black_18dp"/>
            <TextView
                android:id="@+id/likes"
                style="@style/FreeBoardCnt"/>

            <ImageView
                android:id="@+id/commentsIcon"
                style="@style/FreeBoardIcon"
                android:src="@drawable/baseline_comment_black_18dp"/>
            <TextView
                android:id="@+id/comments"
                style="@style/FreeBoardCnt"/>

            <TextView
                android:id="@+id/createdAt"
                android:layout_width="0dp"
                android:gravity="center|end"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:text=""
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>