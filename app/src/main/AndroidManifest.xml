<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wannagohome.lens_review_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LensReviewApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.mypage.myarticlecomment.MyArticleCommentActivity"></activity>
        <activity android:name=".ui.mypage.myarticle.MyArticleActivity" />
        <activity android:name=".ui.article.article.write.WriteArticleActivity" />
        <activity android:name=".ui.article.article.modify.ModifyArticleActivity" />
        <activity android:name=".ui.review.write.WriteReviewActivity" />
        <activity android:name=".ui.review.review_detail.ReviewDetailActivity" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.lens_detail.LensDetailActivity" />
        <activity android:name=".ui.article.article.ArticleActivity" />
        <activity android:name=".ui.article.article.comment.CommentActivity" />
        <activity android:name=".ui.MainActivity" />
    </application>

</manifest>